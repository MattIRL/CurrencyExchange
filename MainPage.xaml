<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurrencyExchange.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="exchangecoins.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="various european coins" />

            <Label
                Text="Currency Exchange Calculator"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Please select your currency and value"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="usage instructions" />
            <Entry x:Name="ValueDecimal"
                   Placeholder="Enter a decimal currency value"
                   Keyboard="Numeric" />
            <Picker x:Name="CurrencyPicker"
            Title="Select a currency" />

            <Button Text="Submit"
                    Clicked="OnSubmitClicked" />
            <Label x:Name="CurrencyResult"
       Text="Click submit to calculate"
       FontSize="18"
       TextColor="SpringGreen" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
