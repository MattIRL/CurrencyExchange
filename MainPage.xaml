<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurrencyExchange.MainPage">

    
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="185" />
            <RowDefinition Height="150" />
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
            <RowDefinition Height="75" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
            <Image Grid.Row="0"
                   Grid.ColumnSpan="3"
             
                    Source="exchangecoins.png"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    SemanticProperties.Description="various european coins" />

            <Label Grid.Row="1"
                    Grid.ColumnSpan="3"
                    Text="Currency Exchange Calculator"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1" />

            <Label Grid.Row="2"
                    Grid.ColumnSpan="1"
                    Text="Please enter your USD decimal value"
                    HorizontalTextAlignment="Start"
                    Margin="20,0"
                    SemanticProperties.HeadingLevel="Level2"
                    SemanticProperties.Description="usage instructions" />
        <Label Grid.Row="2"
                    Grid.Column="3"
                    Margin="20,0"
                    HorizontalTextAlignment="Start"               
                    Text="Please select the conversion currency"
                    SemanticProperties.HeadingLevel="Level2"
                    SemanticProperties.Description="usage instructions" />
        <Entry Grid.Row="3"
                   Grid.ColumnSpan="2"
                   Margin="10,0"
                   x:Name="ValueDecimal"
                   Placeholder="Enter a decimal currency value"
                   Keyboard="Numeric" />
        <Picker Grid.Row="3"
                    Grid.Column="3"
                Margin="10,0"
                    x:Name="CurrencyPicker"/>

            <Button Grid.Row="4"
                    Grid.ColumnSpan="3"
                    Margin="50,10"
                    Text="Submit"
                    Clicked="OnSubmitClicked" />
            <Label Grid.Row="5"
                   Grid.Column="1"
                   HorizontalTextAlignment="Center"
                x:Name="CurrencyResult"
       Text="Click submit to calculate"
       FontSize="18"
       TextColor="SpringGreen" />
        </Grid>
</ContentPage>
